<Page loaded="pageLoaded">
  <StackLayout orientation="vertical">
    <TextField
      id="email"
      text="{{ email }}"
      hint="Email Address"
      keyboardType="email"
      autocorrect="false"
      autocapitalizationType="none"
    />
    <TextField
      id="password"
      text="{{ password }}"
      hint="Password"
      secure="true"
    />
    <Button
      id="loginButton"
      text="Log in"
      tap="{{ logIn }}"
      isEnabled="false"
    />
  </StackLayout>
</Page>